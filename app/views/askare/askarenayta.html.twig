{% extends "base.html" %}
{% block content %}
    <h1>Askare</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nimi</th>
                <th>Tärkeysaste</th>
                <th>Luokat</th>
                <th>Kuvaus</th>
                <th>Lisätty</th>
            </tr>
        </thead>
        <tbody>
            <tr>        
                <td>{{askare.nimi}}</td>
                <td>{{askare.tarkeys}}</td>
                <td>{% for luokka in askare.luokat %}
                {{luokka}}
                {% endfor %}</td>
                <td>{{askare.kuvaus}}</td>      
                <td>{{askare.lisatty}}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}