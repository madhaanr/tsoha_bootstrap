{% extends "base.html" %}
{% block content %}
    <h1>Lisää askare</h1>
    {% if errors %}
    <div class="alert alert-danger">
      <ul>
        {% for error in errors %}
          <li>{{error}}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
    <table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nimi</th>
            <th>Tärkeysaste</th>
            <th>Luokka</th>
            <th>Kuvaus</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <form method="post" action="{{base_path}}/askare">
                <td><input name="nimi" class="form-control" type="text" value="{{attributes.nimi}}"></td>
                <td><input name="tarkeys" class="form-control" type="text" value="{{attributes.tarkeys}}"></td>
                <td><input name="luokka" class="form-control" type="text" value="{{attributes.luokka}}"></td>
                <td><input name="kuvaus" class="form-control" type="text" value="{{attributes.kuvaus}}"></td>
                <td><button type="submit" class="btn btn-danger">Lisää</button></td>
            </form>
        </tr>
    </tbody>
    </table>
{% endblock %}