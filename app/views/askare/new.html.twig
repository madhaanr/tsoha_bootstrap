{% extends "base.html" %}
{% block content %}
    <h1>Lisää askare</h1>
    {% if errors %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{error}}</li>
                    {% endfor %}
            </ul>
        </div>
    {% endif %}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nimi</th>
                <th>Tärkeysaste</th>
                <th>Luokka</th>
                <th>Kuvaus</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
        <form method="post" action="{{base_path}}/askare">
            <td><input name="nimi" class="form-control" type="text" value="{{askare.nimi}}"></td>
            <td><input name="tarkeys" class="form-control" type="text" value="{{askare.tarkeys}}"></td>
            <div class="form-group">
               <td> <select class="form-control" name="luokat[]" multiple="">
                    {% for luokka in luokat %}
                         <option value="{{luokka.id}}">{{luokka.nimi}}</option>
                    {% endfor %}
                </select></td>    
            </div>         
            <td><input name="kuvaus" class="form-control" type="text" value="{{askare.kuvaus}}"></td>
            <td><button type="submit" class="btn btn-danger">Lisää</button></td>
        </form>
    </tr>
</tbody>
</table>
{% endblock %}