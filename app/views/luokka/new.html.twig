{% extends "base.html" %}
{% block content %}
    <h1>Lis채채 luokka</h1>
    {% if errors %}
    <div class="alert alert-danger">
      <ul>
        {% for error in errors %}
          <li>{{error}}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
    <table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nimi</th>
            <th>Kuvaus</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <form method="post" action="{{base_path}}/luokka">
                <td><input name="nimi" class="form-control" type="text" value="{{luokka.nimi}}"></td>
                <td><input name="kuvaus" class="form-control" type="text" value="{{luokka.kuvaus}}"></td>
                <td><button type="submit" class="btn btn-danger">Lis채채</button></td>
            </form>
        </tr>
    </tbody>
    </table>
{% endblock %}